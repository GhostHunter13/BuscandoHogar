<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarDatosActivity"
    android:background="#E3F2FD"
    android:layout_margin="20dp">




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="281dp"
            android:layout_height="197dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="7dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.031"
            app:srcCompat="@drawable/imagenbuscandounhogar"
            tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="casual"
            android:text="DIGITE LOS DATOS"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="137dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <TableRow>
        <TextView
            android:id="@+id/textNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRES"
            android:fontFamily="casual"
            android:textColor="#0C4176"
            android:textSize="8pt"
            android:gravity="right"/>

        <EditText android:id="@+id/nombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"

            android:textColorHint="#E2E5EE" />

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/textapellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APELLIDOS "
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPostalAddress"

            android:textColorHint="#E2E5EE" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textdepartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEPARTAMENTO "
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/departamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPostalAddress"

            android:textColorHint="#E2E5EE" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIUDAD "
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/ciudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPostalAddress"

            android:textColorHint="#E2E5EE" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#TELEFONICO "
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"

            android:textColorHint="#E2E5EE" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-MAIL "
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textWebEmailAddress"

            android:textColorHint="#E2E5EE" />

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textcontraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textColor="#0C4176"
            android:fontFamily="casual"
            android:textSize="8pt"
            android:gravity="right" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:inputType="numberPassword"
            android:textColorHint="#E2E5EE" />

    </TableRow>



    <Button
        android:id="@+id/btncontinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:text="CONTINUAR"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        tools:ignore="MissingConstraints" />



</TableLayout>