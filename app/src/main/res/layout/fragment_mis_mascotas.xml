<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.MisMascotasFragment">

    <LinearLayout
        android:id="@+id/llNoMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivNoMascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/perro_lista_vacia"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:text="@string/no_tienes_mascotas_registradas_aun"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMisMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>