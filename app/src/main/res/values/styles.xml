<resources>
    <!-- Style for the whole app. -->
    <style name="BusncandoUnHogarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="actionBarTheme">@style/BHogarStyle</item>
    </style>

    <!--   BarStyle     -->
    <style name="BHogarStyle">
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:fontFamily">@font/simplicity</item>
        <item name="actionBarStyle">@style/BHogarStyleTitle</item>
    </style>

    <!--  Title Bar Style  -->
    <style name="BHogarStyleTitle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <!-- Style for the bar app -->
    <style name="BuscandoHogarBarStyle">
        <item name="fontFamily">@font/simplicity</item>
        <item name="android:textColorPrimary">@color/whiteTextColor</item>
        <item name="android:textSize">2sp</item>
        <item name="backgroundColor">@color/colorPrimary</item>
    </style>
    
    <style name="titleActionBarBuscandoHogar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">50dp</item>
    </style>

    <!-- Colores de la barra de abajo   -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorSecondary</item>
    </style>


    <style name="proifleDetailsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/profileAccentColor</item>
    </style>

    <!-- Estilos para las imagenes del Profile   -->

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Imagen   -->
    <style name="styleImageProfile">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="styleMainText" parent="viewParent">
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="styleDescText" parent="viewParent">
        <item name="android:textColor">@color/blackTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Para los estilos de los relativesLayout   -->
    <style name="styleRelativeLayout" parent="viewParent">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="styleSocialMedia">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Style for a single iconButton -->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>



</resources>