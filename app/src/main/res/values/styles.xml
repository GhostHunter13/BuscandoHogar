<resources>
    <!-- Style for the whole app. -->
    <style name="BusncandoUnHogarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>
    
    <style name="titleActionBarBuscandoHogar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="fontFamily">@font/simplicity</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Colores de la barra de abajo   -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/whiteTextColor</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorSecondary</item>
    </style>

    <style name="proifleDetailsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/profileAccentColor</item>
    </style>

    <!-- Estilos para las imagenes del Profile   -->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Imagen   -->
    <style name="styleImageProfile">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="styleMainText" parent="viewParent">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="styleDescText" parent="viewParent">
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Para los estilos de los relativesLayout   -->
    <style name="styleRelativeLayout" parent="viewParent">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="styleSocialMedia">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!-- Style for a single iconButton -->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!--  Styles for the TabLayout  -->
    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <!-- for text -->
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSecondary</item>
        <item name="colorOnSurface">@color/gray</item>
    </style>
    
    <!--  For cardView  -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorSurface">@color/colorWhite</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>
    
    <style name="StyleForFloatingButton" parent="">
        <item name="colorSecondary">@color/whiteTextColor</item>
        <item name="colorOnSecondary">@color/whiteTextColor</item>
        <item name="colorOnSurface">@color/whiteTextColor</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>





</resources>